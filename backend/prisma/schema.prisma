generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  balance   Float?
  income    Float?
  expenses  Float?

  pots    Pot[]
  budgets Budget[]
  bills   Bill[]

  transactions             Transaction[] @relation("UserTransactions")
  counterpartyTransactions Transaction[] @relation("CounterpartyTransactions")
}

model Pot {
  id     Int    @id @default(autoincrement())
  name   String
  amount Float

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model Budget {
  id       Int    @id @default(autoincrement())
  category String
  amount   Float
  color    String

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

enum BillStatus {
  PAID
  DUE
  UPCOMING
}

model Bill {
  id     Int    @id @default(autoincrement())
  status   BillStatus
  amount Float
  user   User @relation(fields: [userId], references: [id])
  userId Int
}

enum TransactionType {
  INCOMING
  OUTGOING
}

model Transaction {
  id          Int             @id @default(autoincrement())
  amount      Float
  date        DateTime
  description String?
  type        TransactionType
  category    String
  userId Int
  user   User @relation("UserTransactions", fields: [userId], references: [id])

  counterpartyId Int
  counterparty   User @relation("CounterpartyTransactions", fields: [counterpartyId], references: [id])
}
